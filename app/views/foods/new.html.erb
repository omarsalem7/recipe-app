<h1>Add new food</h1>

<%= form_with model: @food, url: "/users/#{current_user.id}/foods" do |f| %>

<div>
    <div class="form-group">
      <%= f.label :Name %>
      <%= f.text_field :name, class: "form-control" %>
    </div>

    <div class="form-group">
      <%= f.label :Measurement_Unit  %>
      <%= f.select :measurement_unit, ['grams', 'kilograms', 'units', 'litres', 'dozen'],
       {}, {class: "form-select"} %>
    </div>

    <div class="form-group">
      <%= f.label :Price %>
      <%= f.number_field :price, class: "form-control" %>
    </div>

    <div class="form-group">
      <%= f.submit %>
    </div>
  </div>

<% end%>
