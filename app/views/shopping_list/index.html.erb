<div>
  <% if flash[:notice] %>
    <p class="alert alert-success" role="alert"><%= notice %> </p>
  <% end %>
  <div class="d-flex justify-content-between align-items-center">
    <h1>General Shopping list</h1>
    <ul class="list-group list-group-horizontal">
      <li class="list-group-item">Amount of food items to buy: <%= @ingredients.count %> </li>
      <li class="list-group-item"> Total value of food needed: $ <%= @total_price %> </li>
    </ul>
  </div>
  <div id="shopping-list">
    <table class="table">
      <thead>
        <tr>
          <th scope="col">Food</th>
          <th scope="col">Quantity</th>
          <th scope="col">Price</th>
        </tr>
      </thead>
      <tbody>
        <% @foods.each do |food| %>
          <tr>
            <% quantity = RecipeFood.joins(:food).where(food_id: food.id).sum('quantity') %>
            <td><%= food.name %></td>
            <td><%= quantity %></td>
            <td><%= food.price * quantity %></td>
          </tr>
        <% end %>
      </tbody>
    </table>
  </div>

</div>
